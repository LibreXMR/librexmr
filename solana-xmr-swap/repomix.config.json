{
  "output": {
    "filePath": "context-full.xml",
    "style": "xml",
    "showLineNumbers": true
  },
  "ignore": {
    "customPatterns": [
      "node_modules/**",
      ".git/**",
      ".cursor/**",
      "solana-release/**",
      "**/target/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/.npm-cache/**",
      "sbf-sdk/**",
      ".sbf-sdk/**",
      "**/swap_state/**",
      "**/xmr_simulator_state/**",
      
      "context*.xml",
      "context-*.xml",
      "*.log",
      ".DS_Store"
