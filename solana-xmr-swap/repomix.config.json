    "Makefile",
    "repomix.config.json",
    ".github/workflows/ci.yml",
    "SECURITY.md",
    "AUDIT_STATUS.md",
    "docs/**",
    "docs/HARDENING.md",
    "Anchor.toml",
    "Cargo.toml",
    "Cargo.lock",
    "test_vectors/**",
    "programs/**",
    "tools/**",
    "tools/xmr_wallet/**",
    "frontend/**",
    "vendor/curve25519-dalek/Cargo.toml",
